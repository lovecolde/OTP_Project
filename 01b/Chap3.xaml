<Page x:Class="_01b.Chap3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_01b"
      mc:Ignorable="d" 
d:DesignHeight="600" d:DesignWidth="825"
      Title="Chap3">

    <Grid Background="White" Margin="0,0,0,0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" Height="500" Width="725">
            <TextBlock x:Name="QuizQuestion" Text="퀴즈 질문 1: 오픈 소스 소프트웨어의 예는?" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBox x:Name="AnswerTextBox" Width="300" Height="30" Margin="0,0,0,20"/>
            <Button x:Name="SubmitButton" Content="제출" Click="SubmitButton_Click" Width="100" Height="30"/>
            <TextBlock x:Name="FeedbackTextBlock" Text="" FontSize="16" Foreground="Red" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>
